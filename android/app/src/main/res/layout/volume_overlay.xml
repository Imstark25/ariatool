<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootLayout"
    android:layout_width="90dp"
    android:layout_height="320dp"
    android:background="@drawable/glass_bg"
    android:paddingVertical="24dp"
    android:paddingHorizontal="0dp"
    android:elevation="14dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Volume Percentage Text -->
        <TextView
            android:id="@+id/ghost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#37474F"
            android:fontFamily="sans-serif-medium"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="4dp"/>
            
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="%"
            android:textSize="12sp"
            android:textColor="#90A4AE"
            android:layout_marginTop="-4dp"
            android:layout_gravity="center_horizontal"/>

        <!-- Slider Container Area -->
        <!-- We use weight to fill space between text and icon -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <!-- The Slider -->
            <!-- 
               Rotation: -90 degrees.
               Width: Length of slider (vertical space available).
               Height: Thickness of touch area.
            -->
            <!-- We center it. The length needs to be enough. -->
            <SeekBar
                android:id="@+id/volumeSlider"
                android:layout_width="220dp" 
                android:layout_height="40dp"
                android:rotation="-90"
                android:layout_gravity="center"
                android:splitTrack="false"
                android:thumb="@drawable/custom_slider_thumb"
                android:progressDrawable="@drawable/custom_slider_track" />
        </FrameLayout>

        <!-- Bottom Icon -->
         <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_volume_up"
            android:tint="#78909C"
            android:layout_marginTop="8dp"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>
</FrameLayout>
