<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootLayout"
    android:layout_width="220dp"
    android:layout_height="380dp"
    android:background="@drawable/glass_bg"
    android:padding="20dp"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:elevation="14dp">

    <!-- Ghost text aligned behind the slider -->
    <!-- Centered in the container -->
    <TextView
        android:id="@+id/ghost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="60"
        android:textSize="140sp"
        android:textColor="#08000000"
        android:layout_gravity="center"
        android:fontFamily="sans-serif-light"
        android:translationY="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VOLUME CONTROL"
            android:textStyle="bold"
            android:textSize="12sp"
            android:textColor="#546E7A" 
            android:letterSpacing="0.1"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal"/>
            
        <!-- Spacer -->
        <View android:layout_width="match_parent" android:layout_height="20dp"/>

        <!-- Slider Container Area -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- MAX label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MAX"
                android:textSize="11sp"
                android:textColor="#B0BEC5"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal|top"
                android:layout_marginTop="0dp"/>

            <!-- The Slider -->
            <!-- 
               Rotation: -90 degrees.
               The 'width' becomes the visual vertical height.
               The 'height' becomes the visual horizontal thickness.
            -->
            <SeekBar
                android:id="@+id/volumeSlider"
                android:layout_width="200dp" 
                android:layout_height="40dp"
                android:rotation="-90"
                android:layout_gravity="center"
                android:splitTrack="false"
                android:thumb="@drawable/custom_slider_thumb"
                android:progressDrawable="@drawable/custom_slider_track"
                android:layout_marginTop="10dp"/>
                
        </FrameLayout>
    </LinearLayout>
</FrameLayout>
